<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd">
  <targets>
    <target name="console" xsi:type="ColoredConsole">
      <layout xsi:type="SimpleLayout">
        <text>${date} [${uppercase:inner=${level}}] [${threadid}:${threadname}] [${logger}] (${ndc})${newline}${message}${onexception:inner=${newline}${exception:format=ToString}}${newline}</text>
      </layout>
    </target>
    <target name="file" xsi:type="File" fileName="${basedir}/Log.txt" encoding="utf-8">
      <layout xsi:type="SimpleLayout">
        <text>${date} [${uppercase:inner=${level}}] [${threadid}:${threadname}] [${logger}] (${ndc})${newline}${message}${onexception:inner=${newline}${exception:format=ToString}}${newline}</text>
      </layout>
    </target>
  </targets>
  <rules>
    <logger name="*" minlevel="Info" writeTo="console" />
    <logger name="*" minlevel="Warn" writeTo="file" />
  </rules>
</nlog>