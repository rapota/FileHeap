{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.ColoredConsole"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {SourceContext}] [{ThreadId}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "WithThreadId" ]
  },
  "options": {
    "targetFolder": "c:\\FlatCopy\\target",
    "sourceFolder": "c:\\FlatCopy\\source",
    "searchPattern": "*.*",
    "overwrite": false,
    "isParallel": true,
    "CreateHardLinks": false
  }
}